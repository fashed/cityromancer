<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Your Listing", rooms_path, class: "sidebar-link active" %>
      </li>
      <li class="sidebar-item">
        <%= link_to "Your Reservations", rooms_path, class: "sidebar-link active" %>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">
        <% @rooms.each do |r| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag r.photos[0].image.url(:thumb) if r.photos.length > 0 %>
            </div>
            <div class="col-md-7">
              <h4><%= link_to r.listing_name, r %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "Update", edit_room_path(r), class: "btn-primary btn" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>